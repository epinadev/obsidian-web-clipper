{
  "manifest_version": 3,
  "name": "Obsidian Web Clipper",
  "version": "1.0",
  "description": "Manage your tasks quickly from any page.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "commands": {
    "open-modal": {
      "suggested_key": {
        "mac": "Shift+Alt+L"
      },
      "description": "Opens the productivity modal"
    }
  }
}
